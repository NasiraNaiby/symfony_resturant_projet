            <!-- start of (tacos) -->
     <div class="bg pb-3">


     {% for category, plats in categories %}
     <div class="container p-3 mt-5" id="{{ category|lower|replace({' ': '-'}) }}">
         <div class="row">
             <h1 class="fw-bold">
                 {{ category|capitalize }}
