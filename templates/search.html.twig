

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('assets/CSS/style.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/CSS/css.css') }}">
    <title>Search</title>
</head>
<body>

    <div class="container mt-5">
        <!-- Back Button -->
        <div class="mb-4">
            <a href="{{ path('main_accueil') }}" class="btn btn-secondary" style="background-color: #333; color: #fff; border: none;">
                &larr; Back
            </a>
        </div>
        
        <div class="row">
            <!-- Sidebar for Categories -->
            <div class="col-md-3">
                <div class="list-group">
                    <a href="#" class="list-group-item active text-center" style="background-color: #dfdfdf; color: #333; border: 1px solid #ccc;">Categories</a>
                    <a href="{{ path('search', { 'category': 'Tacos' }) }}" class="list-group-item text-center" style="background-color: #f8f8f8; color: #333;">Tacos</a>
                    <a href="{{ path('search', { 'category': 'Burgers' }) }}" class="list-group-item text-center" style="background-color: #f8f8f8; color: #333;">Burgers</a>
                    <a href="{{ path('search', { 'category': 'Petit-déjeuner' }) }}" class="list-group-item text-center" style="background-color: #f8f8f8; color: #333;">Petit-déjeuner</a>
                    <a href="{{ path('search', { 'category': 'SeaFoods' }) }}" class="list-group-item text-center" style="background-color: #f8f8f8; color: #333;">Seafood</a>
                    <a href="{{ path('search', { 'category': 'Salads' }) }}" class="list-group-item text-center" style="background-color: #f8f8f8; color: #333;">Salads</a>
                    <a href="{{ path('search', { 'category': 'Boissons' }) }}" class="list-group-item text-center" style="background-color: #f8f8f8; color: #333;">Boissons</a>
                </div>
            </div>
    
            <!-- Main Section for Search Results -->
            <div class="col-md-9">
                <h1 class="text-center mb-4" style="background-color: #333; color: #fff; padding: 10px; border-radius: 5px;">Search Results</h1>
                
                {% if category %}
                    <h5 class="text-center">Category: {{ category }}</h5>
                {% endif %}
                
                {% if plats is not empty %}
                    <div class="row">
                        {% for result in plats %}
                            <div class="col-md-4 mb-4">
                                <div class="card h-100" style="border: 1px solid #ccc;">
                                    <img src="{{ asset('uploads/' ~ result.platPhoto) }}" class="search-img" alt="{{ result.platNom }}" height="300px">
                                    <div class="card-body text-center" style="background-color: #f8f8f8;">
                                        <h5 class="card-title" style="color: #333;">{{ result.platNom }}</h5>
                                        <p class="card-text" style="color: #333;">Price: €{{ result.platPrix }}</p>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <p class="text-center" style="background-color: #333; color: #fff; padding: 10px; border-radius: 5px;">No plats found for "{{ query }}" in this category.</p>
                {% endif %}
            </div>
            
        </div>
    </div>
    
    
</body>
</html>